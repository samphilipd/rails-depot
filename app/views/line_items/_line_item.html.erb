<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
  <td>
  <% if line_item.quantity > 1 %>
  <%= button_to 'V', decrement_line_item_path(line_item.id), method: :post, remote: true %>
  <% else %>
  <%= button_to 'X', decrement_line_item_path(line_item.id), method: :post, remote: true %>
  <% end %>
  </td>
  <td><%= line_item.quantity %></td>
  <td><%= line_item.product.title %></td>
  <td class="item_price"><%= number_to_currency(line_item.total_price)%></td>
</tr>