<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Pay type:</strong>
  <%= @order.pay_type %>
</p>

<% if @order.ship_date.nil? %>
<p>Order not yet shipped.</p>
<%= link_to 'Add ship date', edit_order_path(@order) %>
<% else %>
<p>Order shipped on: <%= @order.ship_date %></p>
<% end %>

