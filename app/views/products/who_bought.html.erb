<% @product.orders.each do |order| %>
  <h2>Order <%= order.id %></h2>
  <p>Shipped to <%= order.name %> at address: <%= order.address %></p>
  <table>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Total Price</th>
    </tr>
    <% order.line_items.each do |li| %>
    <tr>
      <td><%= li.product.title %></td>
      <td><%= li.quantity %></td>
      <td><%= number_to_currency li.total_price %></td>
    </tr>
    <% end %>
    <tr>
      <td colspan="2">Total</td>
      <td><%= number_to_currency order.line_items.map(&:total_price).sum %></td>
    </tr>
  </table>
  <p>Paid by <%= order.pay_type %></p>
<% end %>